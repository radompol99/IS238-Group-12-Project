# AWS region for clients
AWS_REGION=us-east-1

# Storage and database
S3_BUCKET=your-s3-bucket
DDB_TABLE=YourDynamoDBTable

# Domain for generated addresses
DOMAIN=yourcompany.com

# Gmail OAuth secret in AWS Secrets Manager
# The secret JSON should contain:
# {
#   "GMAIL_CLIENT_ID": "xxx.apps.googleusercontent.com",
#   "GMAIL_CLIENT_SECRET": "xxx",
#   "GMAIL_REFRESH_TOKEN": "xxx"
# }
SECRETS_ARN=arn:aws:secretsmanager:REGION:ACCOUNT:secret:your-secret-id

# Gmail account to fetch from
GMAIL_USER=you@example.com

# Safety switch: set to 'true' to enable real IMAP fetching
ENABLE_FETCH=false

# Telegram + Webhook
TELEGRAM_BOT_TOKEN=123456:ABC...
WEBHOOK_SECRET=my_webhook_secret

# Summarization API (OpenAI proxy or custom)
OPENAI_SUMMARY_URL=https://your-openai-endpoint/summary
OPENAI_API_KEY=your-api-key
